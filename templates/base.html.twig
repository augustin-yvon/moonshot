<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
        {% endblock %}
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>

    <body>
        <header>

        <div class="user-data">
            {% if app.user %}
            <h1>Bienvenu {{ app.user.firstname }}</h1>
            <p>id. {{ app.user.id }}</p>
            {% else %}
            <h1>Bienvenu</h1>
            {% endif %}
        </div>

            {# <div class="header-logo">
                <a href="{{ path('home') }}">
                    <img src="{{ asset('assets/media/png/logo-laplateforme.png') }}" alt="Logo La Plateforme">
                </a>
            </div> #}

            <nav>
                <ul>
                    <li>
                        <a href="{{ path('home') }}">
                            <img src="{{ asset('assets/media/svg/home.svg') }}" alt="icon home">Home
                        </a>
                    </li>
                    {% if app.user %}
                        <li><a href=""><img src="{{ asset('assets/media/svg/profile.svg') }}" alt="icon profile">Profile</a></li>
                        <li><a href=""><img src="{{ asset('assets/media/svg/mail.svg') }}" alt="mail profile">Mail</a></li>
                        <li><a href="{{ path('app_logout') }}"><img src="{{ asset('assets/media/svg/logout.svg') }}" alt="icon logout">Logout</a></li>
                    {% else %}
                        <li><a href="{{ path('app_register') }}"><img src="{{ asset('assets/media/svg/register.svg') }}" alt="icon register">Register</a></li>
                        <li><a href="{{ path('app_login') }}"><img src="{{ asset('assets/media/svg/login.svg') }}" alt="icon login">Login</a></li>
                    {% endif %}
                </ul>
            </nav>
        </header>

        {% block body %}{% endblock %}

        <footer>
            <p>© 2024 Moonshot | Alix, Salvatore, Augustin & Maëlle.</p>
        </footer>
    </body>
</html>
