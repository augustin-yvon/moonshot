{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}


{% block body %}
    <div class="wrapper">

        {% if app.user %}

        <div class="dashboard">
            <div class="grades-section">
                <h2>Your grades</h2>
                {% if grades is not empty %}
                    {% for grade in grades %}
                        <div class="grade-data">
                            <div id="course-name">{{ grade.course.name }}</div>
                            <div>{{ grade.grade }} /100</div>
                        </div>
                    {% endfor %}
                {% else %}
                    <p>You have no grades yet.</p>
                {% endif %}
            </div>

            <div class="courses-section">
                <h2>Your courses</h2>
                {% if documents is not empty %}
                    {% for document in documents %}
                        <div class="course-data">
                            <div>{{ document.name}}</div>
                            <div><a href="{{ document.getFilePath }}" target="_blank">download</a></div>
                        </div>
                    {% endfor %}
                
                {% else %}
                    <p>You have no courses yet.</p>
                {% endif %}
            </div>
        </div>

            

        {% else %}
            <h1>Welcome</h1>
        {% endif %}

    </div>
{% endblock %}
