{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <h1>Post index</h1>

    {% for post in posts %}
        <div class="post">
            <h2>{{ post.message.text }}</h2>
            {% if post.images|length > 0 %}
                <img src="{{ post.images.first.path }}" alt="{{ post.images.first.name }}">
            {% endif %}
        </div>
    {% endfor %}

    <a href="{{ path('post_new') }}">Create new</a>
{% endblock %}
