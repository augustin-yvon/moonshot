{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="form-container">
        <h1>Register</h1>
        <div class="form-input">
            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
                <div class="form-input-register">
                    {{ form_row(registrationForm.firstname, {'attr': {'class': 'form-row'}}) }}
                    {{ form_row(registrationForm.lastname, {'attr': {'class': 'form-row'}}) }}
                    {{ form_row(registrationForm.birthday, {'attr': {'class': 'form-row'}}) }}
                    {{ form_row(registrationForm.email, {'attr': {'class': 'form-row'}}) }}
                    {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-row'}}) }}
                </div>
                
                <button type="submit">Register</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
    
{% endblock %}
